@model ProjetoCallCenter.MVC.ViewModels.SegmentacaoViewModel

@{
    ViewBag.Title = "Excluir Segmentação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir essa segmentação?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credor.NomeFantasia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credor.NomeFantasia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaEmAtrasoDe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaEmAtrasoDe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaEmAtrasoAte)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaEmAtrasoAte)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorDividaDe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorDividaDe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorDividaAte)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorDividaAte)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
