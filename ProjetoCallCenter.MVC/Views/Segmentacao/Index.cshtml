@model ProjetoCallCenter.MVC.ViewModels.ListaSegmentacaoViewModel

@{
    ViewBag.Title = "Segmentações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar nova", "Create")
</p>
@using (Html.BeginForm("Index", "Segmentacao", "POST"))
{
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(model => model.UsuarioId, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.UsuarioId, (SelectList)ViewBag.ListaUsuarios, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(model => model.CredorId, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.CredorId, (SelectList)ViewBag.ListaCredores, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Dias em Atraso de
                </th>
                <th>
                    Dias em Atraso até
                </th>
                <th>
                    Valor da Dívida de
                </th>
                <th>
                    Valor da Dívda até
                </th>
                <th>
                    Ações
                </th>
            </tr>

            @foreach (var item in Model.Segmentacoes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaEmAtrasoDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaEmAtrasoAte)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorDividaDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorDividaAte)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.SegmentacaoId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.SegmentacaoId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.SegmentacaoId })
                    </td>
                </tr>
            }

        </table>
}

        @section scripts{
            <script>
                $(document).ready(function () {
                    $('#UsuarioId').change(function () {
                        $("form").submit();
                    });
                    $('#CredorId').change(function () {
                        $("form").submit();
                    });
                })();
            </script>
        }
