@model ProjetoCallCenter.MVC.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Efetuar Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Call Center</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/mystyle.css" type="text/css" rel="stylesheet" />
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal form-login", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="text-center">Entrar</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control input-login", @placeholder = "Nome Usuário", @autofocus = "" })
                                @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Senha, new { @class = "form-control input-login", @placeholder = "Senha" })
                                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <div class="checkbox-inline">
                                    @Html.CheckBoxFor(m => m.LembreMe)
                                    @Html.LabelFor(m => m.LembreMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-5">
                                <input type="submit" value="Efetuar Login" class="btn btn-group-lg btn-primary" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
