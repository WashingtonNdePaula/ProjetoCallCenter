@model ProjetoCallCenter.MVC.ViewModels.UsuarioViewModel

<div class="form-group">
    <div class="col-md-offset-1 col-md-10">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-1 col-md-6">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.Credencial.TipoCredencialId, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Credencial.TipoCredencialId, (SelectList)ViewBag.ListaTipo, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2">
        @Html.LabelFor(model => model.Credencial.StatusId, htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.DropDownListFor(model => model.Credencial.StatusId, (SelectList)ViewBag.ListaStatus, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
</div>

