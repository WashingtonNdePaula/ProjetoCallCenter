@model IEnumerable<ProjetoCallCenter.MVC.ViewModels.CredorViewModel>

@{
    ViewBag.Title = "Credores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            Cidade / UF
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade) / @Html.DisplayFor(modelItem => item.UF)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CredorId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.CredorId }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.CredorId })
            </td>
        </tr>
    }

</table>
