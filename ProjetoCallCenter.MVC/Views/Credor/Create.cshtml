@model ProjetoCallCenter.MVC.ViewModels.CredorViewModel

@{
    ViewBag.Title = "Novo Credor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CredorId, htmlAttributes: new { @Value = "0" })
        @Html.Partial("_CredorPartial")


        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" formaction="/Credor/Create" formmethod="post" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                @Html.ActionLink("Voltar à lista", "Index")
            </div>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Mascaras")
    <script src="~/Scripts/credor.js" type="text/javascript"></script>
}
